BASE08                      DEFAULT=d75f5f
BASE09                      DEFAULT=ff8700
BASE0A                      DEFAULT=ffaf00
BASE0B                      DEFAULT=afaf00
BASE0C                      DEFAULT=85ad85
BASE0D                      DEFAULT=83adad
BASE0E                      DEFAULT=d485ad
BASE0F                      DEFAULT=d65d0e

# setup font settings for accessing them from the shell
FONT_SANS                   DEFAULT="Quicksand Medium"
FONT_SERIF                  DEFAULT=Merriweather
FONT_MONO                   DEFAULT=Mononoki
