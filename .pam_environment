# define PATHs
PATH                          DEFAULT=/usr/local/bin:${PATH}:@{HOME}/.local/bin
GOPATH                        DEFAULT=@{HOME}/.local/share/go
WINEPREFIX                    DEFAULT=@{HOME}/.local/share/wine
WINEARCH                      DEFAULT=win32

# define default applications with some common variables
EDITOR                        DEFAULT=nvim
TERMINAL                      DEFAULT=termite
BROWSER                       DEFAULT=qutebrowser

# define style for QT applications
QT_STYLE_OVERRIDE             DEFAULT=adwaita

# setup ibus as default input method for all applications
GTK_IM_MODULE                 DEFAULT=ibus
XMODIFIERS                    DEFAULT=\@im=ibus
QT_IM_MODULE                  DEFAULT=ibus

# define config locations by environment variable
GNUPGHOME                     DEFAULT=@{HOME}/.config/gnupg
HISTFILE                      DEFAULT=@{HOME}/.local/share/.bash_history
LESSHISTFILE                  DEFAULT=@{HOME}/.local/share/.lesshst

# setup base16 colors as environment variables
__BASE00                      DEFAULT=282828
__BASE01                      DEFAULT=3c3836
__BASE02                      DEFAULT=504945
__BASE03                      DEFAULT=665c54
__BASE04                      DEFAULT=bdae93
__BASE05                      DEFAULT=d5c4a1
__BASE06                      DEFAULT=ebdbb2
__BASE07                      DEFAULT=fbf1c7
__BASE08                      DEFAULT=fb4934
__BASE09                      DEFAULT=fe8019
__BASE0A                      DEFAULT=fabd2f
__BASE0B                      DEFAULT=b8bb26
__BASE0C                      DEFAULT=8ec07c
__BASE0D                      DEFAULT=83a598
__BASE0E                      DEFAULT=d3869b
__BASE0F                      DEFAULT=d65d0e

# setup font settings for accessing them from the shell
FONT_SANS                     DEFAULT="Quicksand Medium"
FONT_SERIF                    DEFAULT=Merriweather
FONT_MONO                     DEFAULT=mononoki
