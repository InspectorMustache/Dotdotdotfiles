let defaultengine = 'duckduckgo'
let completionengines = ['duckduckgo', 'wikipedia']
" search engines
let searchengine youtube = "https://www.youtube.com/results?search_query=%s"
let searchengine wikipedia = "https://en.wikipedia.org/w/index.php?search=%s"
let searchengine wikipedia_german = "https://en.wikipedia.org/w/index.php?search=%s"
let searchengine google = "https://www.google.com/search?q=%s"
let searchalias y= "youtube"
let searchalias w = "wikipedia"
let searchalias wd = "wikipedia_german"
let searchalias g = "google" 

let mapleader=','
" keybinds (normal mode)
unmapAll
" scrolling
map j scrollDown
map k scrollUp
map h scrollLeft
map l scrollRight
map d scrollPageDown
map u scrollPageUp
map D scrollFullPageDown
map U scrollFullPageUp
map gg scrollToTop
map G scrollToBottom
map '' lastScrollPosition
" history
map H goBack
map L goForward
map <Leader>H previousDomain
map <Leader>L nextDomain
" hints
map . openLastHint
map f createHint
map F createTabbedHint
map <Leader>F createActiveTabbedHint
map <Leader>t createHoverHint
map <Leader>T createUnhoverHint
map <Leader>m createMultiHint
" tabs
map K nextTab
map J previousTab
map xx closeTab
map XX myCloseTabsOthers
map xJ closeTabsToLeft
map xK closeTabsToRight
map r reloadTab
map R reloadTabUncached
map - lastClosedTab
map <Leader><Tab> lastUsedTabs
" page
map gi goToInput
map gI goToLastInput
map : openCommandBar
map <Leader>. repeatCommand
map \ passKeys
map gE goUpUrl
map <Leader>G goToRootUrl
map go makeLinks
" clipboard
map yf yankUrl
map yF multiYankUrl
map yy yankUrl
