#!/bin/bash

tmp_stdin=$(mktemp)
tmp_stdout=$(mktemp)
tmp_scr=$(mktemp)

cat > "$tmp_stdin"
echo "#!/bin/bash
fzf $FZF_OVERLAY_OPTS < $tmp_stdin > $tmp_stdout" > "$tmp_scr"
chmod +x "$tmp_scr"

alacritty -t fzfly --class fzfly --config-file "$HOME/.config/alacritty//overlay.yml" -e "$tmp_scr"
cat "$tmp_stdout"

if [[ ! -s "$tmp_stdout" ]]; then
    exit_code=130
else
    exit_code=0
fi

rm "$tmp_scr"
rm "$tmp_stdin"
rm "$tmp_stdout"
exit $exit_code
