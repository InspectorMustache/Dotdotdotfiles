#!/bin/bash

tmp_stdin=$(mktemp -u --tmpdir -- fzfly.stdin.XXXXXX)
mkfifo "$tmp_stdin"
tmp_stdout=$(mktemp -u --tmpdir -- 'fzfly stdout.XXXXXX')
mkfifo "$tmp_stdout"
tmp_scr=$(mktemp --tmpdir fzfly.scr.XXXXXX)

echo "#!/bin/bash
selection=\"\$(cat '$tmp_stdin' | fzf $FZF_OVERLAY_OPTS)\"
echo \"\$selection\" > \"$tmp_stdout\"" > "$tmp_scr"
chmod +x "$tmp_scr"

alacritty -t fzfly --class fzfly --config-file "$HOME/.config/alacritty/overlay.yml" -e "$tmp_scr" &
exec 3> "$tmp_stdin"
cat >&3
exec 3>&-
selection="$(cat "$tmp_stdout")"

rm "$tmp_scr"
rm "$tmp_stdin"
rm "$tmp_stdout"

if [[ -n "$selection" ]]; then
    echo "$selection"
else
    exit 130
fi
