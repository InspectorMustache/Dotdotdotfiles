function paccow {
    pacman -Ss $1
    cower -s --sort=votes $1
}

function live {
    while true; do
        dd bs=8 count=1 if=/dev/urandom of=/tmp/.live &>/dev/null
        cp /tmp/.live ${1}
        sleep .5
        rm ${1}/.live
        echo -ne 'tick'
        sleep 300
        echo -ne '\rtock'
    done
}
